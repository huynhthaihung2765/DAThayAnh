@model IEnumerable<webmvclinhkiendientu.models.loailk>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>Loại Linh Kiện</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên loại linh kiện
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TENLLK)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaLLK }) |

                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaLLK })
                </td>
            </tr>
        }

    </table>
