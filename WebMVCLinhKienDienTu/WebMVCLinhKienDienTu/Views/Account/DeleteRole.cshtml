@model WebDemo.Models.RoleUser
@{
    ViewBag.Title = "DeleteRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">DeleteRole</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Phân quyền cho tài khoản
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">

        @using (Html.BeginForm("DeleteRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.HiddenFor(model => model.id)
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Email", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <label>@Model.email</label>
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Chọn Quyền", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("role")
                </div>
            </div>


            <input type="submit" class="btn btn-outline btn-success" value="Xóa" />


        }
    </div>
</div>


