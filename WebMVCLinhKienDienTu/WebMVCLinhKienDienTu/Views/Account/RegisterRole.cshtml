@model WebDemo.Models.RegisterViewModel
@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Phân quyền tài khoản</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        Phân quyền cho tài khoản
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">

        @using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <hr />

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("chọn Email", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("UserName")
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Chọn Quyền", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("Name")
                </div>
            </div>


            <input type="submit" class="btn btn-outline btn-success" value="Đăng ký" />


        }
    </div>
</div>
@Html.Action("ListUser", "Account");

