@model WebDemo.Models.LINHKIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "LINHKIENs", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        <h4 class="btn-success">@ViewBag.success</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLK)

        <div class="form-group">
            @Html.LabelFor(model => model.TenLK, htmlAttributes: new { @class = "control-label col-md-2" })
